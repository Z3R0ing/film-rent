<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://movieMore.caption"
        messagesPack="com.company.filmrent.web.screens.movie">
    <data>
        <instance id="movieDc"
                  class="com.company.filmrent.entity.movie.Movie"
                  view="movie-view">
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="form" spacing="true">
        <form id="form" dataContainer="movieDc">
            <column>
                <textField id="titleField" property="title" editable="false"/>
                <textField id="timeField" property="time" editable="false"/>
                <dateField id="dataReleaseField" property="dataRelease" editable="false"/>
                <textField id="numOfRatingField" property="numOfRating" editable="false"/>
            </column>
        </form>
    </layout>
</window>
