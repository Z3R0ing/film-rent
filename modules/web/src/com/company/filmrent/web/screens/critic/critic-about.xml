<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://criticAbout.caption"
        focusComponent="form"
        messagesPack="com.company.filmrent.web.screens.critic">
    <data>
        <instance id="criticDc"
                  class="com.company.filmrent.entity.user.Critic">
            <view extends="_local">
                <property name="user" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="form" spacing="true">
        <form id="form" dataContainer="criticDc">
            <column width="350px">
                <textField id="userRangField" property="userRang" editable="false"/>
                <textField id="userName" property="user.login" editable="false"/>
            </column>
        </form>
    </layout>
</window>
