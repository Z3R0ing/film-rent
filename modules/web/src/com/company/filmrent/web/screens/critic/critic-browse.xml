<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://localUserBrowse.caption"
        focusComponent="criticTable"
        messagesPack="com.company.filmrent.web.screens.critic">
    <data readOnly="true">
        <collection id="criticDc"
                    class="com.company.filmrent.entity.user.Critic">
            <view extends="_local">
                <property name="user" view="user.edit"/>
            </view>
            <loader id="criticDl">
                <query>
                    <![CDATA[select e from filmrent_Critic e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="criticTable"
            spacing="true">
        <filter id="filter"
                applyTo="criticTable"
                dataLoader="criticDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="criticTable"
                    width="100%"
                    dataContainer="criticDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="user.login"/>
                <column id="userRang"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="localUsersTable.create"/>
                <button id="editBtn" action="localUsersTable.edit"/>
                <button id="removeBtn" action="localUsersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
