<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://libraryBrowse.caption"
        focusComponent="librariesTable"
        messagesPack="com.company.filmrent.web.screens.library">
    <data readOnly="true">
        <collection id="librariesDc"
                    class="com.company.filmrent.entity.library.Library">
            <view extends="library-view">
                <property name="critic" view="critic-view"/>
                <property name="movie" view="movie-view"/>
            </view>
            <loader id="librariesDl">
                <query>
                    <![CDATA[select e from filmrent_Library e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="librariesTable"
            spacing="true">
        <filter id="filter"
                applyTo="librariesTable"
                dataLoader="librariesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="librariesTable"
                    width="100%"
                    dataContainer="librariesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <group>
                    <column id="critic"/>
                </group>
                <column id="movie"/>
                <column id="isLooked"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="librariesTable.create"/>
                <button id="editBtn" action="librariesTable.edit"/>
                <button id="removeBtn" action="librariesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
